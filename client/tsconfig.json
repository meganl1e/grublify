{
  "extends": "./tsconfig.app.json",
  "files": [],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["client/src/*"]
    },
    "jsx": "react-jsx", // Enables modern React JSX support
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}

